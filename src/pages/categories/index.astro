---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { slugify } from '../../utils/slugify';

const posts = await getCollection('blog');
const tags = [...new Set(posts.flatMap((post) => post.data.tags))];

// Agrupar posts por categoría principal (primer tag)
const categories = tags.reduce((acc, tag) => {
  const categoryPosts = posts.filter((post) => post.data.tags.includes(tag));
  acc[tag] = {
    count: categoryPosts.length,
    posts: categoryPosts,
    subTags: [...new Set(categoryPosts.flatMap((post) => post.data.tags).filter((t) => t !== tag))]
  };
  return acc;
}, {});
---

<Layout
  title="Categorías | Mi Blog"
  description="Explora el contenido de mi blog organizado por categorías y temas. Encuentra artículos relacionados y descubre nuevo contenido."
>
  <section class="categories-header">
    <h1>Categorías</h1>
    <p>Explora el contenido por temas y categorías</p>
  </section>

  <div class="categories-grid">
    {Object.entries(categories).map(([category, data]) => (
      <div class="category-card">
        <div class="category-header">
          <h2>
            <a href={`/categories/${slugify(category)}`}>{category}</a>
          </h2>
          <span class="post-count">{data.count} artículos</span>
        </div>
        
        <div class="sub-tags">
          {data.subTags.map((tag) => (
            <a href={`/tags/${tag}`} class="sub-tag">{tag}</a>
          ))}
        </div>

        <div class="recent-posts">
          <h3>Posts Recientes</h3>
          <ul>
            {data.posts.slice(0, 3).map((post) => (
              <li>
                <a href={`/blog/${slugify(post.data.title)}`}>{post.data.title}</a>
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('es-ES', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </time>
              </li>
            ))}
          </ul>
        </div>

        <a href={`/categories/${slugify(category)}`} class="view-all">
          Ver todos los posts →
        </a>
      </div>
    ))}
  </div>
</Layout>

<style>
  .categories-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .categories-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: var(--text);
  }

  .categories-header p {
    color: var(--text-light);
    font-size: 1.2rem;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .category-card {
    background: var(--background);
    border: 1px solid var(--border);
    border-radius: 1rem;
    padding: 2rem;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .category-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
  }

  .category-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .category-header h2 {
    margin: 0;
    font-size: 1.5rem;
  }

  .category-header h2 a {
    color: var(--text);
    text-decoration: none;
    transition: color 0.2s;
  }

  .category-header h2 a:hover {
    color: rgb(var(--accent));
  }

  .post-count {
    background: rgba(var(--accent), 0.1);
    color: rgb(var(--accent));
    padding: 0.2rem 0.5rem;
    border-radius: 1rem;
    font-size: 0.9rem;
  }

  .sub-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .sub-tag {
    background: rgba(var(--accent), 0.05);
    color: var(--text-light);
    padding: 0.2rem 0.5rem;
    border-radius: 0.5rem;
    font-size: 0.8rem;
    text-decoration: none;
    transition: all 0.2s;
  }

  .sub-tag:hover {
    background: rgba(var(--accent), 0.1);
    color: rgb(var(--accent));
  }

  .recent-posts {
    margin-bottom: 1.5rem;
  }

  .recent-posts h3 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    color: var(--text);
  }

  .recent-posts ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .recent-posts li {
    margin-bottom: 0.75rem;
  }

  .recent-posts a {
    color: var(--text);
    text-decoration: none;
    transition: color 0.2s;
  }

  .recent-posts a:hover {
    color: rgb(var(--accent));
  }

  .recent-posts time {
    display: block;
    font-size: 0.8rem;
    color: var(--text-light);
    margin-top: 0.25rem;
  }

  .view-all {
    display: inline-block;
    color: rgb(var(--accent));
    text-decoration: none;
    font-weight: 500;
    transition: transform 0.2s;
  }

  .view-all:hover {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .categories-header h1 {
      font-size: 2rem;
    }

    .categories-grid {
      grid-template-columns: 1fr;
    }
  }
</style> 