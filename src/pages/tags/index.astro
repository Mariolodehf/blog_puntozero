---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { slugify } from '../../utils/slugify';

const posts = await getCollection('blog');
const tags = [...new Set(posts.flatMap((post) => post.data.tags))];
const tagCounts = tags.reduce((acc, tag) => {
	acc[tag] = posts.filter((post) => post.data.tags.includes(tag)).length;
	return acc;
}, {});
---

<Layout
	title="Etiquetas | Mi Blog"
	description="Explora todos los temas y categorías de mi blog. Encuentra artículos por etiquetas y descubre contenido relacionado."
>
	<section class="tags-header">
		<h1>Etiquetas</h1>
		<p>Explora los temas y categorías de mi blog</p>
	</section>

	<div class="tags-grid">
		{tags.map((tag) => (
			<a href={`/tags/${tag}`} class="tag-card">
				<h2>{tag}</h2>
				<p>{tagCounts[tag]} artículos</p>
			</a>
		))}
	</div>
</Layout>

<style>
	.tags-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.tags-header h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
		color: var(--text);
	}

	.tags-header p {
		color: var(--text-light);
		font-size: 1.2rem;
	}

	.tags-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
		gap: 2rem;
	}

	.tag-card {
		background: var(--background);
		border: 1px solid var(--border);
		border-radius: 1rem;
		padding: 2rem;
		text-decoration: none;
		transition: transform 0.2s, box-shadow 0.2s;
	}

	.tag-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
	}

	.tag-card h2 {
		color: var(--text);
		margin: 0 0 0.5rem 0;
		font-size: 1.5rem;
	}

	.tag-card p {
		color: var(--text-light);
		margin: 0;
		font-size: 0.9rem;
	}

	@media (max-width: 768px) {
		.tags-header h1 {
			font-size: 2rem;
		}

		.tags-grid {
			grid-template-columns: 1fr;
		}
	}
</style> 